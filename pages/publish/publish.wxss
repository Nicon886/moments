.publish-top{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  margin: 10rpx 20rpx;
}
.publish-button{
  border-radius: 10rpx;
  background-color: green;
  text-align: center;
  padding: 5prx;
  width: 120rpx;
  height: 60rpx;
  color: white;
  line-height: 60rpx;
  font-size: 28rpx;
}
.publish-input{

  margin: 10rpx 40rpx;
}
textarea{
  width: 100%;
}
/* 位置 */
.address{
  display: flex;
  flex-direction: row ;
  margin: 20rpx 40rpx;
  font-size: 35rpx;
  word-wrap: wrap;
}
.address image{
  width: 50rpx;
  height: 50rpx;
  margin: 0 10rpx 0 0;
}
.img-box{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  margin: 20rpx 30rpx;
}
.img-item{
  position: relative;
  margin: 5rpx 15rpx;
}
.img-select{
  width: 200rpx;
  height: 200rpx;
}
.img-delect{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}
.img-item-add{
  background: rgb(237, 240, 243);
  margin: 5rpx 15rpx;
  width: 200rpx;
  height: 200rpx;
}
.img-addCamera{
  width: 100rpx;
  height: 100rpx;
  position: relative;
  left: 50rpx;
  top: 50rpx;
}